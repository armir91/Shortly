@model PostUrlVM
@{
    ViewData["Title"] = "Welcome";
}

<section>
    <div class="landing py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-4">
                    <img src="~/img/free-url-shortener.png" class="img-fluid" alt="Image" />
                </div>
                <div class="col-lg-8">
                    <h1 class="display-4">More than just shorter links</h1>
                    <p class="lead">
                        Build your brands recognition and get detailed insights on how your links are performing.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="features" id="features">
    <div class="container">
        <div class="url-shortener-feature">
            <!-- Update action attribute to point to ShortenAction in HomeController-->
            <form class="url-shorten-form" id="url-shorten-form" asp-controller="Home" asp-action="ShortenUrl">
                <div>
                    <input asp-for="Url" type="text" class="url-input" placeholder="Shorten a link here..." autocomplete="off"/>
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-lg" style="">Shorten It!</button>
            </form>
            <div class="url-shorten-results"></div>
        </div>
    </div>
</section>